<Window
    x:Class="Manager.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:im="clr-namespace:chkam05.Tools.ControlsEx.InternalMessages;assembly=chkam05.Tools.ControlsEx"
    xmlns:local="clr-namespace:Manager.Windows" xmlns:mainmenu="clr-namespace:Manager.Components.MainMenu"
    mc:Ignorable="d"
    
    Height="450"
    Width="800"
    Title="Manager"
    Loaded="Window_Loaded">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Frame
            x:Name="contentFrame"
            Grid.Column="1"
            NavigationUIVisibility="Hidden"/>

        <mainmenu:MainMenuControl
            Grid.Column="0"/>

        <im:InternalMessagesExContainer
            x:Name="internalMessagesContainer"
            Grid.ColumnSpan="2"/>

    </Grid>
    
</Window>
