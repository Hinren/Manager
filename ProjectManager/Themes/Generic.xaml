<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cex="clr-namespace:chkam05.Tools.ControlsEx;assembly=chkam05.Tools.ControlsEx"
    xmlns:pages="clr-namespace:ProjectManager.Pages.Base">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Base/ScrollViewerExStyle.xaml"/>
        <ResourceDictionary Source="/Themes/Components/MainMenuListViewExStyle.xaml"/>
        <ResourceDictionary Source="/Themes/Pages/BasePageStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- BASE -->
    
    <Style BasedOn="{StaticResource ScrollViewerExStyle}" TargetType="{x:Type cex:ScrollViewerEx}"/>
    
    <!-- PAGES -->
    
    <Style BasedOn="{StaticResource BasePageStyle}" TargetType="{x:Type pages:BasePage}"/>

</ResourceDictionary>